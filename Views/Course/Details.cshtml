@model StudentInformationManagementSystem.Models.Course

@{
    ViewData["Title"] = "Course Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Course Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Course" asp-action="Index">Courses</a></li>
        <li class="breadcrumb-item active">Details</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-info-circle me-1"></i>
            Course Information
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CourseCode)</th>
                            <td>@Html.DisplayFor(model => model.CourseCode)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CourseName)</th>
                            <td>@Html.DisplayFor(model => model.CourseName)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CreditHours)</th>
                            <td>@Html.DisplayFor(model => model.CreditHours)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                            <td>@Html.DisplayFor(model => model.CreatedDate)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                            <td>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <i class="bi bi-card-text me-1"></i>
                            Description
                        </div>
                        <div class="card-body">
                            <p>@(string.IsNullOrEmpty(Model.Description) ? "No description available." : Model.Description)</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.CourseId" class="btn btn-warning">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>