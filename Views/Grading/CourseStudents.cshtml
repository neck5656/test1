<!-- Views/Grading/SubmitGrade.cshtml -->
@model StudentInformationManagementSystem.Models.GradeViewModel

@{
    ViewData["Title"] = "Submit Grade";
}

<h2>Submit Grade</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>@Model.CourseName - @Model.StudentName</h3>
            </div>
            <div class="card-body">
                <form asp-action="SubmitGrade" method="post">
                    <!-- form content -->
                </form>

                <!-- Fix for the select tag -->
                <select asp-for="Grade" class="form-control">
                    <option value="">-- Select Grade --</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="F">F</option>
                </select>
