@model IEnumerable<StudentInformationManagementSystem.Models.StudentCourse>

@{
    ViewData["Title"] = "Students in " + ViewBag.CourseName;
}

<h2>Students in @ViewBag.CourseName</h2>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>Enrolled Students</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Student Number</th>
                            <th>Current Grade</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in Model)
                        {
                            <tr>
                                <td>@enrollment.Student.FirstName @enrollment.Student.LastName</td>
                                <td>@enrollment.Student.StudentNumber</td>
                                <td>@(enrollment.Grade ?? "Not Graded")</td>
                                <td>
                                    <a asp-action="SubmitGrade" asp-route-id="@enrollment.StudentCourseId" class="btn btn-warning btn-sm">Update Grade</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">Back to Courses</a>
            </div>
        </div>
    </div>
</div>
