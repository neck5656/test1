@model StudentInformationManagementSystem.Models.StudentCourse

@{
    ViewData["Title"] = "Submit Grade";
}

<h2>Submit Grade</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>@Model.Course.CourseName - @Model.Student.FirstName @Model.Student.LastName</h3>
            </div>
            <div class="card-body">
                <form asp-action="SubmitGrade" method="post">
                    <input type="hidden" name="id" value="@Model.StudentCourseId" />

                    <div class="form-group">
                        <label class="control-label">Student Name</label>
                        <input class="form-control" value="@Model.Student.FirstName @Model.Student.LastName" readonly />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Course</label>
                        <input class="form-control" value="@Model.Course.CourseName" readonly />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Current Grade</label>
                        <input class="form-control" value="@(Model.Grade ?? "Not Graded")" readonly />
                    </div>

                    <div class="form-group">
                        <label for="grade" class="control-label">New Grade</label>
                        <select name="grade" id="grade" class="form-control">
                            <option value="">-- Select Grade --</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                            <option value="F">F</option>
                        </select>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="CourseStudents" asp-route-id="@Model.CourseId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
