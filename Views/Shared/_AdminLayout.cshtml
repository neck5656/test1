<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Information Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-theme.css" asp-append-version="true" />
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="#">Admin Panel</a>

        <!-- Navbar Search-->
        <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="bi bi-search"></i></button>
            </div>
        </div>

        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-fill"></i> @ViewBag.UserName
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Settings</a></li>
                    <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                            <div class="sb-nav-link-icon"><i class="bi bi-speedometer2"></i></div>
                            Dashboard
                        </a>
                        <a class="nav-link" asp-controller="StudentEnrollment" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-person-check"></i></div>
                            Student Enrollments
                        </a>

                        <div class="sb-sidenav-menu-heading">Management</div>
                        <a class="nav-link" asp-controller="Admin" asp-action="ManageUsers">
                            <div class="sb-nav-link-icon"><i class="bi bi-people"></i></div>
                            Users
                        </a>
                        <a class="nav-link" asp-controller="Course" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-book"></i></div>
                            Courses
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Administrator
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>

            <footer class="py-4 mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; StudentInformationManagementSystem 2025</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


<!-- DataTables JS -->
    <link href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>

    <!-- Select2 for better dropdowns -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Particle effects container -->
    <div class="particle-container" id="particleContainer"></div>

    <script>
      // Create particles and butterflies
      document.addEventListener('DOMContentLoaded', function() {
        const container = document.getElementById('particleContainer');

        // Create glowing particles
        for (let i = 0; i < 20; i++) {
          setTimeout(() => {
            createParticle(container);
          }, i * 2000);
        }

        // Create butterflies
        for (let i = 0; i < 5; i++) {
          setTimeout(() => {
            createButterfly(container);
          }, i * 4000);
        }

        // Set interval to continuously create particles and butterflies
        setInterval(() => createParticle(container), 2000);
        setInterval(() => createButterfly(container), 4000);
      });

      function createParticle(container) {
        const particle = document.createElement('div');
        particle.classList.add('particle');

        // Random position
        const posX = Math.floor(Math.random() * window.innerWidth);
        const posY = window.innerHeight;

        // Random size
        const size = Math.floor(Math.random() * 10) + 5;

        particle.style.left = `${posX}px`;
        particle.style.top = `${posY}px`;
        particle.style.width = `${size}px`;
        particle.style.height = `${size}px`;

        // Random animation duration
        const duration = Math.floor(Math.random() * 10) + 10;
        particle.style.animationDuration = `${duration}s`;

        container.appendChild(particle);

        // Remove particle after animation completes
        setTimeout(() => {
          particle.remove();
        }, duration * 1000);
      }

      function createButterfly(container) {
        const butterfly = document.createElement('div');
        butterfly.classList.add('butterfly');

        // Random position
        const posX = Math.floor(Math.random() * window.innerWidth);
        const posY = window.innerHeight;

        // Random size
        const size = Math.floor(Math.random() * 20) + 15;

        butterfly.style.left = `${posX}px`;
        butterfly.style.top = `${posY}px`;
        butterfly.style.width = `${size}px`;
        butterfly.style.height = `${size}px`;

        // Random animation duration
        const duration = Math.floor(Math.random() * 15) + 15;
        butterfly.style.animationDuration = `${duration}s`;

        container.appendChild(butterfly);

        // Remove butterfly after animation completes
        setTimeout(() => {
          butterfly.remove();
        }, duration * 1000);
      }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>