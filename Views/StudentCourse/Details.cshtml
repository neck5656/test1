<!-- Views/StudentCourse/Index.cshtml -->
@model IEnumerable<StudentInformationManagementSystem.Models.CourseViewModel>

@{
    ViewData["Title"] = "My Courses";
}

<h2>My Courses</h2>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>Enrolled Courses</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Course Code</th>
                            <th>Course Name</th>
                            <th>Credit Hours</th>
                            <th>Grade</th>
                            <th>Enrollment Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.CourseCode</td>
                                <td>@course.CourseName</td>
                                <td>@course.CreditHours</td>
                                <td>@course.Grade</td>
                                <td>@course.EnrollmentDate.ToShortDateString()</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-info btn-sm">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
